<Window x:Class="KinectICP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helixtoolkit.codeplex.com"
        Title="MainWindow" Height="600" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Command="{Binding Start}">Start</Button>
        <helix:HelixViewport3D>
            <helix:PointsVisual3D Points="{Binding Points}"></helix:PointsVisual3D>            
        </helix:HelixViewport3D>
        <!--<Image Width="640" Height="480" Source="{Binding DepthMap}" />-->
    </DockPanel>
</Window>
